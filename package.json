{
  "name": "prediction-party",
  "version": "0.1.0",
  "private": true,
  "devDependencies": {
    "react-scripts": "1.1.0"
  },
  "dependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.11.1",
    "@types/express-session": "^1.15.7",
    "@types/node": "^8.9.1",
    "@types/passport": "^0.4.2",
    "@types/sqlite3": "^3.1.1",
    "body-parser": "^1.15.2",
    "concurrently": "^3.5.1",
    "cookie-parser": "^1.4.3",
    "cors": "^2.8.1",
    "express": "^4.14.0",
    "express-session": "^1.14.2",
    "fsevents": "^1.1.3",
    "moment": "^2.17.1",
    "nodemon": "^1.14.12",
    "passport": "^0.4.0",
    "passport-slack": "0.0.7",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "sqlite": "^2.9.1",
    "sqlite3": "^3.1.13",
    "ts-node": "^4.1.0",
    "typescript": "^2.7.1",
    "whatwg-fetch": "^2.0.1"
  },
  "scripts": {
    "build": "yarn run build-front && yarn run build-back",
    "build-client": "react-scripts build",
    "build-server": "tsc -p ./backend",
    "dev": "concurrently 'yarn run dev-client' 'yarn run dev-server'",
    "dev-client": "react-scripts start",
    "dev-server": "sh -ac '. backend/.env && DEV_MODE=1 nodemon --exec ./node_modules/.bin/ts-node -- -P backend ./backend/index.ts'",
    "server": "node ./backend/build/index.js",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "proxy": "http://localhost:3001"
}
